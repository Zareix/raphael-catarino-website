---
import '@fontsource-variable/inter';
import { getLangFromUrl, useTranslations } from '~/i18n';
import Nav from '~/layouts/Nav.astro';
import Footer from '~/layouts/Footer.astro';

import '~/styles/global.css';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links: Parameters<typeof Nav>[0]['links'] = [
  {
    href: '#experiences',
    label: t('nav.experiences'),
  },
  {
    href: '#skills',
    label: t('nav.skills'),
  },
  {
    href: '#projects',
    label: t('nav.projects'),
  },
  // {
  //   href: '/blog',
  //   label: t('nav.blog'),
  // },
];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>RaphaÃ«l Catarino | Portfolio</title>
    <meta name="description" content={t('meta.description')} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script
      defer
      data-domain="raphael-catarino.fr"
      is:inline
      src="https://vince.raphael-catarino.fr/js/script.js"></script>
  </head>
  <body>
    <Nav base="#hero" links={links} animationDelay={1.5} />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  section > :is(h1, h2) {
    @apply text-center;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
      filter: blur(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0px);
    }
  }

  :is(h1, h2):not(#hero :is(h1, h2)) {
    opacity: 0;
    transition:
      opacity 0.3s,
      transform 0.3s;
    animation-delay: 0.5s;
  }

  :is(h1, h2):not(#hero :is(h1, h2)).visible {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>

<script>
  import { createObserver } from '~/lib/utils';

  createObserver(':is(h1, h2):not(#hero :is(h1,h2))', 'visible');
</script>
