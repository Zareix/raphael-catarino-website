{
  "name": "raphael-catarino-website",
  "private": true,
  "packageManager": "pnpm@7.24.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev": "pnpm develop",
    "develop": "turbo run develop --parallel",
    "serve": "turbo run develop --parallel",
    "client:build": "turbo run build --filter=client",
    "client:develop": "turbo run develop --filter=client",
    "client:lint": "turbo run lint --filter=client",
    "client:serve": "NODE_ENV=production turbo run serve --filter=client",
    "cms:build": "turbo run build --filter=cms",
    "cms:develop": "turbo run develop --filter=cms",
    "cms:serve": "NODE_ENV=production turbo run serve --filter=cms",
    "docker:cms:build": "pnpm run --filter=cms build",
    "docker:cms:serve": "pnpm run --filter=cms serve"
  },
  "devDependencies": {
    "turbo": "1.6.3"
  }
}