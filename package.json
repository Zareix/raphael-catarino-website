{
  "name": "raphael-catarino-website",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --bun astro dev",
    "build": "NODE_ENV=production SKIP_ENV_VALIDATION=1 bun run --bun astro build",
    "lint": "bun run --bun astro check",
    "format": "bun run --bun prettier --write .",
    "check": "bun run lint && bun run format",
    "preview": "bunx wrangler pages dev --compatibility-date=2025-10-05 ./dist",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/react": "4.4.0",
    "@astrojs/sitemap": "3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "astro": "5.14.5",
    "open-props": "^1.7.16",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "vaul": "^1.1.2",
    "wrangler": "^4.42.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/bun": "^1.2.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.2.23",
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "workerd"
  ]
}
