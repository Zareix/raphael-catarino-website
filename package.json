{
  "name": "raphael-catarino-website",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --bun astro dev",
    "build": "NODE_ENV=production SKIP_ENV_VALIDATION=1 bun run --bun astro build",
    "lint": "bun run --bun astro check",
    "format": "bun run --bun prettier --write .",
    "check": "bun run lint && bun run format",
    "preview": "bunx wrangler pages dev --compatibility-date=2024-12-04 ./dist",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/react": "4.2.5",
    "@astrojs/sitemap": "3.3.1",
    "@astrojs/tailwind": "^6.0.0",
    "@fontsource-variable/inter": "^5.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.2",
    "astro": "5.7.8",
    "open-props": "^1.7.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.83.4",
    "tailwindcss": "^4.0.2",
    "vaul": "^1.1.2",
    "wrangler": "^3.107.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/bun": "^1.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "esbuild",
    "sharp",
    "workerd"
  ]
}